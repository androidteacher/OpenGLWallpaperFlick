<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Beck.GlExampleWallFlick"
    android:versionName="6.0" android:versionCode="6">
 <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="17"/>
    <uses-feature android:name="android.software.live_wallpaper" />
    <application
        android:label="@string/wallpapers"
        android:icon="@drawable/icon">

        <service
            android:label="@string/GL_TITLE"
            android:name="com.Beck.GlExampleWallFlick.GLExample"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper" android:resource="@xml/appinfo" />
        </service>
        <activity
            android:label="@string/settings_title"
            android:name="com.Beck.GlExampleWallFlick.Settings"
            android:theme="@android:style/Theme.Light.WallpaperSettings"
            android:exported="true"
            android:screenOrientation="portrait"
            android:permission="android.permission.BIND_WALLPAPER">
        </activity>
    </application>true
    
</manifest>
